@inject IBreadcrumbItemServiceEvents BreadcrumbItemService

<Breadcrumb Items="navItems"  class="mt-4 d-none d-md-block"/>

@code {
    private List<BreadcrumbItem> navItems = new();

    protected override void OnInitialized() {
        
        BreadcrumbItemService.OnItemsChanged += UpdateItems;
    }
        private  void UpdateItems(object? sender, BreadcrumbItemsEventArgs e)
        {
            navItems = e.Items?.ToList() ?? new();

            StateHasChanged();
        }


}